@model IEnumerable<WebShoppingCar.Models.ProductViewModel>

@{
    ViewBag.Title = "ShoppingCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    @Html.Label("購買人姓名:")
    @Html.TextBox("buyer_name", "請輸入姓名", new { @class = "form-control" })
</div>

<div class="row">
    <div class="col-md-4">
        <fieldset class="well">
            <legend>商品甲區</legend>
            @foreach (var p in Model)
            {
                //set name???
                if (p.ProductGroup == "商品甲區")
                {
                    @*<span>@p.ProductName</span>*@
                    @Html.CheckBoxFor(i => p.ProductBuy, new { @id = string.Format("check_{0}", p.ProductName), @name = string.Format("check.{0}", p.ProductName) })
                    @Html.DisplayFor(i => p.ProductName, new { @id = string.Format("display_{0}", p.ProductName)});
                    @Html.TextBoxFor(i => p.ProductAmt, new { type = "number", min = "0", max = "100", @id = string.Format("numberText_{0}", p.ProductName), @name = string.Format("check.{0}", p.ProductName)})
                    <br />
                }
            }
        </fieldset>
    </div>
    <div class="col-md-4">
        <fieldset class="well">
            <legend>商品乙區</legend>
            @foreach (var p in Model)
            {

                if (p.ProductGroup == "商品乙區")
                {
                    @*<span>@p.ProductName</span>*@
                    @Html.CheckBoxFor(i => p.ProductBuy, new { @id = string.Format("check_{0}", p.ProductName), @name = string.Format("check.{0}", p.ProductName) })
                    @Html.DisplayFor(i => p.ProductName, new { @id = string.Format("display_{0}", p.ProductName) });
                    @Html.TextBoxFor(i => p.ProductAmt, new { type = "number", min = "0", max = "100", @id = string.Format("numberText_{0}", p.ProductName), @name = string.Format("check.{0}", p.ProductName) })
                    @*@Html.EditorFor(i => p.ProductAmt, new { @class = "col-md-4" });*@
                    <br />
                }
            }
        </fieldset>
    </div>
    <div class="col-md-4">
        <fieldset class="well">
            <legend>商品丙區</legend>
            @foreach (var p in Model)
            {

                if (p.ProductGroup == "商品丙區")
                {
                    @*<span>@p.ProductName</span>*@
                    @Html.CheckBoxFor(i => p.ProductBuy, new { @id = string.Format("check_{0}", p.ProductName), @name = string.Format("check.{0}", p.ProductName) })
                    @Html.DisplayFor(i => p.ProductName, new { @id = string.Format("display_{0}", p.ProductName) });
                    @Html.TextBoxFor(i => p.ProductAmt, new { type = "number", min = "0", max = "100", @id = string.Format("numberText_{0}", p.ProductName), @name = string.Format("check.{0}", p.ProductName) })
                    <br />
                }
            }
        </fieldset>
    </div>
</div>

<div class="row">
    <input type="submit" value="確認"/>
</div>